<?xml version="1.0" encoding="UTF-8"?>



<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%m%n" />
		</Console>

		<File name="file" fileName="./logs/mybatis_dev_kjy" append="true">
			<PatternLayout
				pattern="[%d{yyyy-MM-dd}] %m%n" />
		</File>
		<!-- 일자별 로그 -->
		<!-- 특정크기마다 백업하여 로그 -->		
	</Appenders>
	<Loggers>
		<Logger name="kr.or.yi.mybatis_dev_kjy" level="trace" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="file" />
		</Logger>
	</Loggers>
</Configuration>

